class Solution {
    public int islandPerimeter(int[][] grid) {
        if (grid == null || grid.length == 0) {
            return 0;
        }
        int m = grid.length;
        int n = grid[0].length;
        int result = 0;
        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                if (grid[i][j] == 1) { // if it is a land
                    if (i == 0 || grid[i-1][j] == 0) result++;
                    if (i == m-1 || grid[i+1][j] == 0) result++;
                    if (j == 0 || grid[i][j-1] == 0) result++;
                    if (j == n-1 || grid[i][j+1] == 0) result++;
                }
            } 
        }
        return result;
    }
}